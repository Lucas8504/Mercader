<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mercader.EncModal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EncModal">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Agregar Encargo"
            VerticalOptions="Center" />

        <Entry x:Name="EncargoEntry" Placeholder="Nombre del encargo" />

        <Entry
            x:Name="PrecioEntry"
            Keyboard="Numeric"
            Placeholder="Precio" />

        <Button Clicked="OnAgregarEncargoClicked" Text="Agregar Encargo" />

    </VerticalStackLayout>
</ContentPage>