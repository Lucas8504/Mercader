<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mercader.GastoModal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="GastoModal">
    <StackLayout
        Margin="10"
        Padding="10"
        Spacing="20">
        <Label
            HorizontalOptions="Center"
            Text="Nuevo gasto"
            VerticalOptions="Center" />
        
        <Entry x:Name="DescripcionGastoEntry" Placeholder="DescripciÃ³n del gasto" />

        <Entry
            x:Name="MontoGastoEntry"
            Keyboard="Numeric"
            Placeholder="Monto" />

        <Button Clicked="OnAgregarGastoClicked" Text="Agregar Gasto" />

        <Button Clicked="Cancelar" Text="Cancelar" />

    </StackLayout>
</ContentPage>