<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mercader.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">



    <StackLayout
        Margin="10"
        Padding="10"
        Spacing="20">

        <Label Text="Encargo" />



        <Button Clicked="InAgregarEncargo" Text="Agregar Gasto" />

        <Label Margin="-9" Text="Ventas" />

        <Entry
            x:Name="PrecioEntry"
            Keyboard="Numeric"
            Placeholder="Precio" />

        <Entry
            x:Name="CantidadEntry"
            Keyboard="Numeric"
            Placeholder="Cantidad" />

        <Entry
            x:Name="DescripcionV_Entry"
            Keyboard="Default"
            Placeholder="Cantidad" />

        <Button Clicked="OnAgregarVentaClicked" Text="Agregar Venta" />

        <Label Text="Gastos" />


        <Button Clicked="InAgregarGasto" Text="Agregar Gasto" />

        <Button Clicked="OnCalcularGananciasClicked" Text="Calcular Ganancias" />

        <Label x:Name="GananciasLabel" />

        <Button Clicked="OnExportarAExcelClicked" Text="Exportar a Excel" />

    </StackLayout>



</ContentPage>
