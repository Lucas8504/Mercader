<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mercader.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">



    <StackLayout
        Margin="10"
        Padding="10"
        Spacing="20">

        <Label Text="Encargo" />

        <Entry x:Name="EncargoEntry" Placeholder="Nombre del encargo" />

        <Entry
            x:Name="PrecioEntry"
            Keyboard="Numeric"
            Placeholder="Precio" />

        <Button Clicked="OnAgregarEncargoClicked" Text="Agregar Encargo" />

        <Label Margin="-9" Text="Ventas" />

        <Entry
            x:Name="CantidadEntry"
            Keyboard="Numeric"
            Placeholder="Cantidad" />

        <Button Clicked="OnAgregarVentaClicked" Text="Agregar Venta" />

        <Label Text="Gastos" />

        <Entry x:Name="DescripcionGastoEntry" Placeholder="Descripción del gasto" />

        <Entry
            x:Name="MontoGastoEntry"
            Keyboard="Numeric"
            Placeholder="Monto" />

        <Button Clicked="OnAgregarGastoClicked" Text="Agregar Gasto" />

        <Button Clicked="OnCalcularGananciasClicked" Text="Calcular Ganancias" />

        <Label x:Name="GananciasLabel" />

        <Button Clicked="OnExportarAExcelClicked" Text="Exportar a Excel" />

    </StackLayout>



</ContentPage>
