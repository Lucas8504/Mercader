<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mercader.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="4"
            Padding="4"
            Clicked="InAgregarEncargo"
            FontSize="Caption"
            Text="Encargos" />
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Margin="4"
            Padding="4"
            Clicked="InAgregarVenta"
            FontSize="Caption"
            Text="Ventas" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="4"
            Padding="4"
            Clicked="InAgregarGasto"
            FontSize="Caption"
            Text="Gastos" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Margin="4"
            Padding="4"
            Clicked="OnCalcularGananciasClicked"
            FontSize="Caption"
            Text="Balance" />




        <Button
            Grid.Row="2"
            Grid.ColumnSpan="4"
            Margin="24"
            Padding="4"
            Clicked="OnExportarAExcelClicked"
            FontSize="Caption"
            Text="Exportar a Excel" />

        <Entry
            Grid.Row="3"
            Grid.Column="0"
            Margin="2"
            BackgroundColor="#2a2a2a"
            IsEnabled="False"
            Placeholder="Encargos"
            PlaceholderColor="#7d7c7c"
            TextColor="#cccccc" />

        <Entry
            x:Name="GananciasLabel"
            Grid.Row="3"
            Grid.Column="3"
            Margin="2"
            BackgroundColor="#2a2a2a"
            HorizontalTextAlignment="Start"
            IsEnabled="False"
            Placeholder="Ganancias"
            PlaceholderColor="#7d7c7c"
            TextColor="#cccccc" />

        <Entry
            x:Name="VentasLabel"
            Grid.Row="3"
            Grid.Column="1"
            Margin="2"
            BackgroundColor="#2a2a2a"
            IsEnabled="False"
            Placeholder="Ventas"
            PlaceholderColor="#7d7c7c"
            TextColor="#cccccc" />

        <Entry
            Grid.Row="3"
            Grid.Column="2"
            Margin="2"
            BackgroundColor="#2a2a2a"
            IsEnabled="False"
            Placeholder="Gastos"
            PlaceholderColor="#7d7c7c"
            TextColor="#cccccc" />

    </Grid>

</ContentPage>
