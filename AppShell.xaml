<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mercader.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mercader"
    Title="Mercader"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Title="Nueva Libro" ContentTemplate="{DataTemplate local:NuevoLibro}" />
    <ShellContent Title="Encargo" ContentTemplate="{DataTemplate local:Encargo}" />
    <ShellContent Title="Ventas" ContentTemplate="{DataTemplate local:Ventas}" />
    <ShellContent Title="Gasto" ContentTemplate="{DataTemplate local:Gasto}" />




</Shell>
